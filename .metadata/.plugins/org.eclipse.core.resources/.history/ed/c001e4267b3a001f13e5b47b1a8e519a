package com.example.boot06.interceptor;

import org.springframework.stereotype.Component;
import org.springframework.web.servlet.HandlerInterceptor;

import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
/*
 *  - Interceptor 가 동작하는 조건
 *  
 *  1. bean 이 되어야 한다.(spring bean container 에 등록) _적절한 어노테이션을 붙이면 자동 등록
 *  2. Interceptor 레지스트리에 등록을 해야한다._어떨 때 동작을 할 것인지 
 */

@Component
public class LoginInterceptor implements HandlerInterceptor{
	// 컨트롤러가 동작하기 이전(pre) 에 이 메소드가 호출된다
	// jsp 에서 필터에서 동작하던 곳과 같은 역활
	@Override
	public boolean preHandle(HttpServletRequest request, HttpServletResponse response, Object handler)
			throws Exception {
		
		return HandlerInterceptor.super.preHandle(request, response, handler);
	}
}
